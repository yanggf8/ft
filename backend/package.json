{
  "name": "fortunet-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "bash -c 'unset CLOUDFLARE_API_TOKEN && wrangler deploy'",
    "deploy:unsafe": "wrangler deploy",
    "db:init": "wrangler d1 execute fortunet-db --remote --file=scripts/schema.sql",
    "db:init:local": "wrangler d1 execute fortunet-db --local --file=scripts/schema.sql",
    "typecheck": "tsc --noEmit",
    "test": "echo 'No tests configured (integration tests require RUN_INTEGRATION=true)'",
    "test:integration": "RUN_INTEGRATION=true vitest run",
    "test:integration:staging": "TEST_API_URL=https://staging.fortunet-api.yanggf.workers.dev RUN_INTEGRATION=true vitest run"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "typescript": "^5.3.3",
    "vitest": "^2.0.0",
    "wrangler": "^4.53.0"
  }
}
